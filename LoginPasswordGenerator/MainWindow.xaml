<Window x:Class="LoginPasswordGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginPasswordGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox x:Name="tbLogin"/>
        <TextBox x:Name="tbGeneratedLogin"  Grid.Column="1"/>
        <DatePicker x:Name="dpBirthday" Grid.Row="1"/>
        <TextBox x:Name="tbPassword"  Grid.Row="2"/>

        <Button x:Name="btnGenerate" 
                Grid.Column="1" Grid.Row="2"
                Content="Generate" Click="btnGenerate_Click"/>




    </Grid>
</Window>
